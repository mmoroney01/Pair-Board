<!DOCTYPE html>
<html>
  <head>
    <title>PairBoard</title>
    <%= csrf_meta_tags %>

    <%= stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track': 'reload' %>
    <%= javascript_include_tag 'application', 'data-turbolinks-track': 'reload' %>
  </head>

  <header>
    <nav>
      <ul class="nav">
        <% if logged_in? %>
          <%= link_to "Signed in as #{current_user.first_name}; see profile", user_path(current_user) %> |
          <%= link_to "Sign Out", session_path(current_user.id), method: :delete %>
        <% end %>
       </ul>
    </nav>
  </header>

  <body>
    <%= yield %>
  </body>
</html>
