<h3>I'm a user! See my stuff!</h3>

<% if session[:user_id] == @user.id %>
<%= link_to "Edit Profile", edit_user_path(@user) %>
<% end %>

<% if @user.picture_url %>
  <p class="pic"><%= image_tag @user.picture_url %></p>
<% end %>
<p class="name"><%= @user.first_name %> <%= @user.last_name %></p>
<p class="bio"><%= @user.bio %></p>
<% if @user.topics %>
<div class="like_to_mentor">
<p>I like to mentor on...</p>
	<ul>
		<% @user.topics.each do |topic| %>
			<li><p> <%= topic %></p></li>
		<% end %>
	</ul>
</div>
<% end %>
<% if @user.mentoring_appointments.length > 0 %>
<div class="left inline">
	<p>Upcoming mentoring slots</p>
	<% @user.mentoring_appointments.each do |appointment| %>
		<%= appointment %>
	<% end %>
</div>
<% end %>

<% if @user.appointments_with_mentors.length > 0 %>
<div class="right inline">
	<p>Upcoming pairing appointments</p>
	<% @user.appointments_with_mentors.each do |appointment| %>
		<%= appointment %>
	<% end %>
</div>
<% end %>
<%= link_to 'Home', slots_path %>
